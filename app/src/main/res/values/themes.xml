<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Apx" parent="android:Theme.Material.Light.NoActionBar" >
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Starting-->
    <style name="Theme.App.Starting" parent="Theme.Apx">
        <item name="android:windowSplashScreenBackground">@color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="android:windowSplashScreenAnimationDuration">2000</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/splash_project</item>
        <item name="postSplashScreenTheme">@style/Theme.Apx</item>
    </style>
</resources>